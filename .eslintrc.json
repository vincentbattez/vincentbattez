{
    "env": {
        "browser": true,
        "jquery": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "plugins": [
        "compat" // compat = compatibilit√© browser
    ],
    "rules": {
        "linebreak-style": 0, // fix windows bug
        // "indent": ["error", "tab"], // indentation avec des tabulations
        // "quotes": ["error", "double"], // ''
        "no-console" :"off",
        "semi": ["error", "always"] // point virgule
    },
    "parserOptions": {
        "sourceType": "module" // autorise import export
    },
    "browserslist": ["last 2 versions', 'ie 8', 'ie 9'"]
}
